    pen.begin_fill()
    pen.setheading(360)  # Rotate heart by 90 degrees (facing right)
    pen.left(10)
    pen.forward(10)
    pen.circle(4, 180)
    pen.right(106)
    pen.circle(4, 180)
    pen.forward(10)
    pen.end_fill()
    
     # Sixth heart
