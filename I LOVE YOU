# Code which will Draw a stucture of red heart with I LOVE YOU text.

import turtle

# Setup the screen
screen = turtle.Screen()
screen.bgcolor("black")

# Setup the turtle
pen = turtle.Turtle()
pen.speed(-10)
pen.hideturtle()

# Function to draw a heart
def draw_heart():
    pen.color("red")
    pen.begin_fill()
    pen.left(140)
    pen.forward(224)
    pen.circle(-112, 200)
    pen.left(120)
    pen.circle(-112, 200)
    pen.forward(224)
    pen.end_fill()
    
# Function to draw a silver diamond shape on top of the ring
def draw_silver_diamond(x, y):
    pen.color("White")
    pen.pensize(1)
    pen.penup()
    pen.goto(x, y)
    pen.pendown()
    pen.fillcolor("silver")
    pen.begin_fill()
    pen.setheading(190)
    
    # Drawing a diamond shape (polygon)
    for _ in range(2):
        pen.forward(15)  # Width of diamond base
        pen.left(120)
        pen.forward(20)  # Side length of diamond
        pen.left(115)
        pen.forward(20)  # Back to the base
        pen.left(120)
    
    pen.end_fill()

# Function to draw two intertwined rings
def draw_rings():
    pen.pensize(5)
    
    # Draw first ring
    pen.penup()
    pen.goto(-5, -50)  # Adjust the position
    pen.pendown()
    pen.color("white")
    pen.circle(30)

# Drawing the heart
pen.penup()
pen.goto(0, -200)
pen.pendown()
draw_heart()

# Drawing the silver diamonds on top of the rings
draw_silver_diamond(-5, -37)  # Position on top of the first ring

# Drawing the intertwined rings inside the heart
draw_rings()

# Drawing the white hearts inside the red heart
def draw_white_hearts():
    pen.color("white")
    pen.pensize(1)
    
    # First heart
    pen.penup()
    pen.goto(-50, -70)  # Adjust position
    pen.pendown()
    pen.begin_fill()
    pen.setheading(370)  # Rotate heart by 90 degrees (facing right)
    pen.left(60)
    pen.forward(13)
    pen.circle(4, 190)
    pen.right(100)
    pen.circle(4, 180)
    pen.forward(10)
    pen.end_fill()

    # Second heart
    pen.penup()
    pen.goto(35, -60)  # Adjust position
    pen.pendown()
    pen.begin_fill()
    pen.setheading(360)  # Rotate heart by 90 degrees (facing right)
    pen.left(40)
    pen.forward(10)
    pen.circle(4, 180)
    pen.right(100)
    pen.circle(4, 180)
    pen.forward(13)
    pen.end_fill()

    # Third heart
    pen.penup()
    pen.goto(60, -146)  # Adjust position
    pen.pendown()
    pen.begin_fill()
    pen.setheading(360)  # Rotate heart by 90 degrees (facing right)
    pen.left(14)
    pen.forward(10)
    pen.circle(4, 180)
    pen.right(98)
    pen.circle(4, 180)
    pen.forward(10)
    pen.end_fill()
    
    # Fourth heart
    pen.penup()
    pen.goto(48, -158)  # Adjust position
    pen.pendown()
    pen.begin_fill()
    pen.setheading(360)  # Rotate heart by 90 degrees (facing right)
    pen.left(12)
    pen.forward(10)
    pen.circle(4, 180)
    pen.right(102)
    pen.circle(4, 180)
    pen.forward(10)
    pen.end_fill()
    
    # Fifth heart
    pen.penup()
    pen.goto(33, -168)  # Adjust position
