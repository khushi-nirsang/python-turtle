     # Thirteenth heart
    pen.penup()
    pen.goto(-72, -140)  # Adjust position
    pen.pendown()
    pen.begin_fill()
    pen.setheading(360)  # Rotate heart by 90 degrees (facing right)
    pen.left(100)
    pen.forward(8)
    pen.circle(4, 180)
    pen.right(90)
    pen.circle(5, 180)
    pen.forward(10)
    pen.end_fill()

draw_white_hearts()

# Writing "I"
pen.penup()
pen.goto(-180, 10)
pen.pendown()
pen.color("white")
pen.write("I", align="center", font=("Courier", 60, "bold"))

# Writing "LOVE"
pen.penup()
pen.goto(-50, 10)
pen.pendown()
pen.write("LOVE", align="center", font=("Courier", 60, "bold"))

# Writing "YOU"
pen.penup()
pen.goto(130, 10)
pen.pendown()
pen.write("YOU", align="center", font=("Courier", 60, "bold"))

# Adding filled yellow stars around the text
def draw_star(x, y):
    pen.penup()
    pen.goto(x, y)
    pen.pendown()
    pen.fillcolor("yellow")
    pen.begin_fill()
    for _ in range(5):
        pen.forward(20)
        pen.right(144)
    pen.end_fill()

for i in range(9):
    draw_star(-200 + 50 * i, 100)
    
# Adding filled yellow stars around the text
def draw_star(x, y):
    pen.penup()
    pen.goto(x, y)
    pen.pendown()
    pen.fillcolor("yellow")
    pen.begin_fill()
    for _ in range(5):
        pen.forward(20)
        pen.right(144)
    pen.end_fill()

for i in range(7):
    draw_star(-150 + 50 * i, 150)
    
# Adding filled yellow stars around the text
def draw_star(x, y):
    pen.penup()
    pen.goto(x, y)
    pen.pendown()
    pen.fillcolor("yellow")
    pen.begin_fill()
    for _ in range(5):
        pen.forward(20)
        pen.right(144)
    pen.end_fill()

for i in range(8):
    draw_star(-180 + 50 * i, 125)

# Finish
turtle.done()
