    pen.setheading(360)  # Rotate heart by 90 degrees (facing right)
    pen.left(12)
    pen.forward(10)
    pen.circle(4, 180)
    pen.right(94)
    pen.circle(4, 180)
    pen.forward(12)
    pen.end_fill()
    
     # Ninth heart
    pen.penup()
    pen.goto(-22, -180)  # Adjust position
    pen.pendown()
    pen.begin_fill()
    pen.setheading(360)  # Rotate heart by 90 degrees (facing right)
    pen.left(100)
    pen.forward(8)
    pen.circle(4, 180)
    pen.right(90)
    pen.circle(5, 180)
    pen.forward(10)
    pen.end_fill()
    
     # Tenth heart
    pen.penup()
    pen.goto(-35, -170)  # Adjust position
    pen.pendown()
    pen.begin_fill()
    pen.setheading(360)  # Rotate heart by 90 degrees (facing right)
    pen.left(100)
    pen.forward(8)
    pen.circle(4, 180)
    pen.right(90)
    pen.circle(5, 180)
    pen.forward(10)
    pen.end_fill()
    
     # Eleventh heart
    pen.penup()
    pen.goto(-47, -160)  # Adjust position
    pen.pendown()
    pen.begin_fill()
    pen.setheading(360)  # Rotate heart by 90 degrees (facing right)
    pen.left(100)
    pen.forward(8)
    pen.circle(4, 180)
    pen.right(90)
    pen.circle(5, 180)
    pen.forward(10)
    pen.end_fill()
    
     # Twelth heart
    pen.penup()
    pen.goto(-60, -150)  # Adjust position
